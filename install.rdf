<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">

    <em:id>{90f8ab8c-9aaa-40eb-9bfc-fd2b7601fa91}</em:id>
    <em:name>Flaggy</em:name>
    <em:version>1.0.0</em:version>
    <em:description>Conveniently flag emails. Displays subjects of flagged emails in red, adds a button for flagging and modifies the key shortcut "1" to toggle a flag. The purpose of the extension is to be able to use flags as an alternative to the "Important" tag for increased interoperability, in particular for IMAP servers that do not support tags like Microsoft Exchange, but also for cases when using different email clients which do not support each other's custom tags.</em:description>
    <em:creator>Maik Riechert</em:creator>
    <em:iconURL>chrome://flaggy/skin/star.png</em:iconURL>
    <em:homepageURL>https://github.com/neothemachine/flaggy</em:homepageURL>
	<em:type>2</em:type>

      <em:file>
         <Description about="urn:mozilla:extension:file:flaggy.jar">
            <em:package>content/</em:package>
            <em:skin>skin/</em:skin>
         </Description>
      </em:file>

      <!-- Thunderbird -->
      <em:targetApplication>
         <Description>
            <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
            <em:minVersion>1.0</em:minVersion>
            <em:maxVersion>99.*</em:maxVersion>
         </Description>
      </em:targetApplication>

   </Description>

</RDF>
